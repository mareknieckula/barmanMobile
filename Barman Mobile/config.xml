<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Barman Mobile</name>
    <description>
        Barman Mobile - A cocktail recipes hybrid mobile app created with phonegap.
    </description>
    <author email="marek.nieckula@hotmail.com" href="http://phonegap.com">
        Marek Nieckula
    </author>
    <content src="index.html" />
    
    <icon platform="android" qualifier="ldpi" src="icons/ldpi.png" />
    <icon platform="android" qualifier="mdpi" src="icons/mdpi.png" />
    <icon platform="android" qualifier="hdpi" src="icons/hdpi.png" />
    <icon platform="android" qualifier="xhdpi" src="icons/xhdpi.png" />
    <icon platform="android" qualifier="xxhdpi" src="icons/xxhdpi.png" />
    
    <access origin="*" />
    
    <plugin name="cordova-plugin-camera" spec="~2.4.1" />
    <plugin name="cordova-plugin-x-socialsharing" spec="~5.1.8" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.3" />
    
    <splash src="splash.png" />
    
    <splash platform="android" qualifier="port-ldpi" src="splash/screen-ldpi-portrait.png" />
    <splash platform="android" qualifier="port-mdpi" src="splash/screen-mdpi-portrait.png" />
    <splash platform="android" qualifier="port-hdpi" src="splash/screen-hdpi-portrait.png" />
    <splash platform="android" qualifier="port-xhdpi" src="splash/screen-xhdpi-portrait.png" />
 
    <splash platform="android" qualifier="land-ldpi" src="splash/screen-ldpi-portrait.png" />
    <splash platform="android" qualifier="land-mdpi" src="splash/screen-mdpi-portrait.png" />
    <splash platform="android" qualifier="land-hdpi" src="splash/screen-hdpi-portrait.png" />
    <splash platform="android" qualifier="land-xhdpi" src="splash/screen-xhdpi-portrait.png" />
    
    <preference name="SplashScreenDelay" value="5000" />
</widget>
